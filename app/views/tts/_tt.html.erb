<div id="<%= dom_id tt %>">
  <div class="w-full sm:px-6">
    <div class="bg-white dark:bg-gray-800  shadow px-4 md:px-10 pt-4 md:pt-7 pb-5 overflow-y-auto">
      <table class="w-full whitespace-nowrap">
        <thead>
          <tr tabindex="0" class="focus:outline-none h-16 w-full text-sm leading-none text-gray-800 dark:text-white ">
            <th class="font-normal text-left pl-12"></th>
            <th class="font-normal text-left pl-12">Nome</th>
            <th class="font-normal text-left pl-20">Status</th>
            <th class="font-normal text-left pl-20">Descrição</th>
          </tr>
        </thead>
        <tbody class="w-full">
          <%  @tts.each do |tt| %>
            <tr abindex="0" class="focus:outline-none h-20 text-sm leading-none text-gray-800 dark:text-white  bg-white dark:bg-gray-800  hover:bg-gray-100 dark:hover:bg-orange-900  border-b border-t border-gray-100 dark:border-gray-700 ">
              <td class="pl12">            
                <%= link_to "Show this tt", tt, class: "focus:ring-2 focus:ring-offset-2 focus:ring-red-300 text-sm leading-none text-gray-600 dark:text-gray-200  py-3 px-5 bg-gray-100 rounded hover:bg-blue-200 dark:hover:bg-gray-700   dark:bg-gray-800  focus:outline-none" %>
                <%= link_to 'Edit this tt', edit_tt_path(tt), class: "focus:ring-2 focus:ring-offset-2 focus:ring-red-300 text-sm leading-none text-gray-600 dark:text-gray-200  py-3 px-5 bg-gray-100 rounded hover:bg-green-200 dark:hover:bg-gray-700   dark:bg-gray-800  focus:outline-none" %>
              </td>
              <td class="pl-12">
                <%= tt.name %>
              </td>
              <td class="pl-20">
                <%= tt.status %>
              </td>
              <td class="pl-20">
                <%= tt.description %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
  <!-- <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= tt.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= tt.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= tt.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Message:</strong>
    <%= tt.message %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Id company:</strong>
    <%= tt.id_company %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Holiday:</strong>
    <%= tt.holiday %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= tt.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= tt.end_date %>
  </p>

  
</div>
